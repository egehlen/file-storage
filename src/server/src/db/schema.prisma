datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Account {
    id String @id @default(uuid())
    name String?
    email String @unique
    passwordHash String
    files File[]
}

model Session {
    id String @id @default(uuid())
    token String @unique
    createdAt DateTime?
}

model File {
    id String @id @default(uuid())
    name String
    type String
    size Int
    thumbnailUrl String
    contentUrl String
    owner Account @relation(fields: [ownerId], references: [id])
    ownerId String
}